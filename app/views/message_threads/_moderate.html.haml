%tr{class: thread.icon_class, id: thread.id}
  %td= link_to thread.title, thread_path(thread)
  %td= t(".#{thread.check_reason}")
  %td= thread.messages.first.body.truncate(300)
  %td= link_to(thread.created_by.full_name, user_profile_path(thread.created_by))
  %td
    = link_to t(".approve"), approve_thread_path(thread),
      method: :put, class: "btn-green", remote: true
    &nbsp;
    = link_to t(".reject"), reject_thread_path(thread),
      method: :put, class: "btn-grey", remote: true

