    %th= t ".id"
    %th= t ".display_name"
    %th= t ".full_name"
    %th= t ".email"
    %th= t(".approved") + "?"
    %th= t ".role"
    %th= t ".created"
    %th= t ".last_seen"
    %th= t ".disabled"
    %th= t ".edit"
    %th= t ".preferences"
