%h2= t '.private_messages'
%table.dashboard-threads
  %tbody
    - @private_threads.each do |thread|
      %tr
        %td.title
          %h4= link_to thread.title, thread_path(thread)
        %td.activity
          = t '.between_html', creator: link_to_profile(thread.created_by), message_to: link_to_profile(thread.user)
        %td.activity
          = time_ago_in_words thread.latest_message.created_at
